<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white_smoke</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/picton_blue</item>
        <item name="actionMenuTextColor">@color/picton_blue</item>
    </style>

    <style name="AppTheme.TextInputStyle">
        <item name="colorControlActivated">@color/picton_blue</item>
        <item name="colorControlNormal">@color/gray_43</item>
    </style>

    <style name="TextInputErrorStyle" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/red_a700</item>
    </style>
</resources>
